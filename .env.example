# ============================================
# koma-fill 環境変数設定
# このファイルを .env にコピーして値を設定してください
# cp .env.example .env
# ============================================

# --- Server ---
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# --- OpenAI API ---
OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_ORG_ID=org-optional

# --- 画像生成設定 ---
# DALL-E 3 の1分あたり最大リクエスト数
DALLE_RATE_LIMIT_PER_MINUTE=5
# Vision APIの1分あたり最大リクエスト数
VISION_RATE_LIMIT_PER_MINUTE=30
# パネルごとの最大リトライ回数
MAX_RETRIES_PER_PANEL=3
# プロジェクトあたりの最大パネル数
MAX_PANELS_PER_PROJECT=12

# --- ファイルストレージ ---
STORAGE_PATH=./uploads
MAX_IMAGE_SIZE_MB=20

# --- 認証 ---
# APIキー（カンマ区切りで複数指定可能）
# 開発環境では未設定でもOK（認証スキップ）
# 本番環境では必須
# API_KEYS=your-api-key-1,your-api-key-2

# --- フロントエンド ---
VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=Koma Fill
